/* pages/login/login.wxss */
.wrapper {
    position: relative;
    z-index: 90;
    padding-bottom: 40rpx;
}

.left-top-sign {
    font-size: 120rpx;
    color: #f8f8f8;
    position: relative;
    left: -16rpx;
}

.welcome {
    font-size: 46rpx;
    color: #555;
    position: relative;
    left: 50rpx;
    top: -90rpx;
}

.input-content {
    padding: 0 60rpx;
}

.input-item {
    height: 120rpx;
    background-color: #f8f6fc;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-items: center;
    align-items: flex-start;
    padding: 0 30rpx;
    margin-bottom: 50rpx;
}

.tit {
    height: 50rpx;
    font-size: 30rpx;
    color: #606266;
    line-height: 50rpx;
}

.input-item input {
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    color: #303133;
}

.confirm-btn {
    width: 630rpx!important;
    height: 76rpx;
    font-size: 32rpx;
    line-height: 76rpx;
    color: #fff;
    background-color: #d43c33;
    border-radius: 50rpx;
    margin-top: 70rpx;
}

.forget-section {
    font-size: 28rpx;
    color: #4399fc;
    text-align: center;
    margin-top: 40rpx;
}

.register-seciton {
    width: 100%;
    font-size: 28rpx;
    color: #606266;
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 50rpx;
}

.register-seciton text {
    color: #4399fc;
    margin-left: 10rpx;
}