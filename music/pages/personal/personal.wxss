/* pages/personal/personal.wxss */
/* 信息显示 */
.user-section {
    height: 520rpx;
    position: relative;
    padding: 100rpx 30rpx 0;
}

.bg{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.user-info-box {
    height: 180rpx;
    position: relative;
    display: flex;
    align-items: center;
    z-index: 1;
}

.portrait {
    width: 130rpx;
    height: 130rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
}

.username {
    display: flex;
    font-size: 24;
    color: #303133;
    margin-left: 20rpx;
}

.vip-card-box {
    height: 240rpx;
    color: #f7d680;
    position: relative;
    display: flex;
    flex-direction: column;
    background: rgba(0, 0, 0, .7);
    border-radius: 16rpx 16rpx 0 0;
    padding: 20rpx 24rpx;
}   

.card-bg {
    width: 380rpx;
    height: 260rpx;
    position: absolute;
    top: 20rpx;
    right: 0;
}

.tit {
    font-size: 22rpx;
    color: #f7d680;
    margin-bottom: 28rpx;
}

.iconfont {
    color: #f6e5a3;
    margin-right: 16rpx;
}

.b-btn {
    width: 132rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 22rpx;
    color: #36343c;
    background-color: #f9e6af;
    border-radius: 20px;
    position: absolute;
    right: 20rpx;
    top: 16rpx;
    z-index: 1;
}

.e-m {
    font-size: 34rpx;
    margin-top: 10rpx;
}

.e-b {
    font-size: 24rpx;
    color: #d8cba9;
    margin-top: 10rpx;
}

/* 选项汇总 */
.cover-container {
    margin-top: -150rpx;
    padding: 0 30rpx 20rpx;
    background-color: #f5f5f5;
    position: relative;
}

.arc {
    width: 100%;
    height: 36rpx;
    position: absolute;
    left: 0;
    top: -34rpx;
}

.nav-section {
    display: flex;
    background-color: #fff;
    padding: 20rpx 0;
    border-radius: 15rpx;
}

.nav-item {
    width: 25%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nav-item .iconfont {
    font-size: 50rpx;
    color: #d43c33;
    line-height: 70rpx;
}

.nav-item text {
    font-size: 22rpx;
}

.personalContent {
    background-color: #fff;
    margin-top: 20rpx;
}

.personalContent .title {
    font-size: 26rpx;
    color: #333;
    line-height: 80rpx;
    padding-left: 20rpx;
}

.cardList {
    margin-top: 20rpx;
}

.card-item {
    height: 80rpx;
    color: #333;
    font-size: 26rpx;
    border-top: 1rpx solid #eee;
    padding: 10rpx;
}

.card-item .more {
    float: right;
}

/* 最近播放 */
.recentScroll {
    height: 200rpx;
    display: flex;    
}

.recentItem {
    margin-right: 20rpx;
}

.recentItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}